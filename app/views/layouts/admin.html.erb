<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ru" lang="ru">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Maximus | Панель администратора</title>
    <meta name="keywords" content="фитнес клуб" />
    <meta name="description" content="Фитнес клуб" />
    <%= stylesheet_link_tag 'admin' %>
    <%= stylesheet_link_tag 'jquery.lightbox' %>
    <%= javascript_include_tag :ckeditor %>
  </head>
  <body>
    <div id="container">
      <% if logged_in? %>
        <div id="header">
          <div class="login_block">
            Панель администратора |
            <%= current_user.login %> | <%= link_to 'выход', '/admin/logout' %>
          </div>
          <div class="clear"></div>
        </div>
        <div class="clear"></div>
        <ul id="menu">
          <a href="<%= admin_pages_path %>">
            <li <% if current_controller?('pages') %>class="active"<% end %>>
              Страницы
            </li>
          </a>
          <a href="<%= admin_albums_path %>">
            <li <% if current_controller?('albums') || current_controller?('photos') %>class="active"<% end %>>
              Фотографии
            </li>
          </a>
          <a href="<%= admin_rooms_path %>">
            <li <% if current_controller?('rooms') %>class="active"<% end %>>
              Залы
            </li>
          </a>
          <a href="<%= admin_exercises_path %>">
            <li <% if current_controller?('exercises') %>class="active"<% end %>>
              Занятия
            </li>
          </a>
          <a href="<%= admin_users_path %>">
            <li <% if current_controller?('users') %>class="active"<% end %>>
              Пользователи
            </li>
          </a>
          <a href="<%= admin_settings_path %>">
            <li <% if current_controller?('settings') %>class="active"<% end %>>
              Настройки
            </li>
          </a>
        </ul>
      <% end %>
      <div class="clear"></div>
      <div id="page">
        <%= yield %>
      </div>
    </div>
    <script type="text/javascript">
      var current_page="admin";
    </script>
    <%= javascript_include_tag 'jquery' %>
    <%= javascript_include_tag 'jquery.lightbox' %>
    <%= javascript_include_tag 'application' %>
  </body>
</html>