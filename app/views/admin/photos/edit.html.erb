<p style="float:left"><%= link_to '← назад', admin_album_path(@photo.album) %></p>
<h1><%= if !@title.nil? then @title end %></h1>
<div class="clear"></div>

<% if @photo.image.exists? %>
<p style="float:right">
  <%= image_tag  @photo.image.url(:medium) %>
</p>
<% end %>

<% form_for @photo, :html => { :multipart => true }, :url => { :action => "update" } do |f| %>
  <p><%= f.error_messages %></p>
  <p>
    <label for="title">название</label>
    <%= f.text_field :title %>
  </p>
  <p>
    <label for="image">фотография</label>
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.check_box :in_voting %>
    <span>участвует в голосовании</span>
  </p>
  <p><%= f.submit 'изменить' %></p>
<% end %>