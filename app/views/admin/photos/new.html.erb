<p style="float:left"><%= link_to '← назад', admin_album_path(@album) %></p>
<h1><%= if !@title.nil? then @title end %></h1>
<div class="clear"></div>
<% form_for @photo, :html => { :multipart => true }, :url => { :action => "create", :album_id=>@album.id } do |f| %>
  <p><%= f.error_messages %></p>
  <p>
    <label for="title">название</label>
    <%= f.text_field :title %>
  </p>
  <p>
    <label for="image">фотография</label>
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.check_box :in_voting %>
    <span>участвует в голосовании</span>
  </p>
  <p><%= f.submit 'добавить' %></p>
<% end %>